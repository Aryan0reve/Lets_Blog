<html lang="en">
<%- include("./partials/head.ejs") %>

    <body>
        <%- include("./partials/nav.ejs") %>

            <div class="content">
                <h2>Sign Up</h2>
                <% if (typeof error !=='undefined' ) { %>
                    <p style="color: #ef4444; margin-bottom: 20px;">
                        <%= error %>
                    </p>
                    <% } %>

                        <form action="/signup" method="POST" class="create-blog">
                            <label for="username">Username:</label>
                            <input type="text" id="username" name="username" required minlength="3" maxlength="20"
                                placeholder="Enter unique username">

                            <label for="email">Email Address:</label>
                            <input type="email" id="email" name="email" required placeholder="Enter your email">

                            <label for="password">Password:</label>
                            <input type="password" id="password" name="password" required minlength="6"
                                placeholder="Enter password (min 6 characters)">

                            <button type="submit">Sign Up</button>
                        </form>

                        <p style="margin-top: 20px; text-align: center; color: #4b5563;">
                            Already have an account? <a href="/login" style="color: #667eea; text-decoration: none;">Log
                                in here</a>
                        </p>
            </div>

            <%- include("./partials/footer.ejs") %>
    </body>

</html>