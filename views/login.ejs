<html lang="en">
<%- include("./partials/head.ejs") %>

    <body>
        <%- include("./partials/nav.ejs") %>

            <div class="content">
                <h2>Log In</h2>
                <% if (typeof error !=='undefined' ) { %>
                    <p style="color: #ef4444; margin-bottom: 20px;">
                        <%= error %>
                    </p>
                    <% } %>

                        <form action="/login" method="POST" class="create-blog">
                            <label for="email">Email Address:</label>
                            <input type="email" id="email" name="email" required>

                            <label for="password">Password:</label>
                            <input type="password" id="password" name="password" required>

                            <button type="submit">Log In</button>
                        </form>

                        <p style="margin-top: 20px; text-align: center; color: #4b5563;">
                            Don't have an account? <a href="/signup" style="color: #667eea; text-decoration: none;">Sign
                                up here</a>
                        </p>
            </div>

            <%- include("./partials/footer.ejs") %>
    </body>

</html>